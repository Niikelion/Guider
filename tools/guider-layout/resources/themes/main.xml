<Themes>
	<app>
		<var name="font" value="Arimo-Regular"/>
		
		<var name="primaryColor" value="#7cb342"/>
		<var name="primaryColorDark" value="#4b830d"/>
		<var name="primaryColorLight" value="#aee571"/>
		
		<var name="accentColor" value="#757575"/>
		<var name="accentColorDark" value="#494949"/>
		<var name="accentColorLight" value="#a4a4a4"/>
	</app>
	
	<app.dark extends="app">
		<var name="primaryColor" value="#282a2e"/>
		<var name="primaryColorDark" value="#242629"/>
		<var name="primaryColorLight" value="#3e3f43"/>
		
		<var name="accentColor" value="#7cb342"/>
		<var name="accentColorDark" value="#4b830d"/>
		<var name="accentColorLight" value="#aee571"/>
	</app.dark>
	
	<toolbar>
		<attr name="backgroundColor" value="?accentColor"/>
	</toolbar>
	
	<toolbar.Button>
		<attr name="padding" value="6 12"/>
		<attr name="textSize" value="16"/>
		<attr name="width" value="wrap_content"/>
		<attr name="height" value="match_parent"/>
	</toolbar.Button>
</Themes>