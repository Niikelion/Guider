<containers.ConstraintsContainer
	width="match_parent"
	height="match_parent"
>
	<containers.ConstraintsContainer
		theme="toolbar"
		id="toolbar"
		name="toolbar"
	
		backgroundColor="?primaryColor"
	
		width = "match_parent"
		height = "32"
		
		horizontalConstraint="regular"
		horizontalSizing="const_offset"
		
		attachLeftTo="parent left"
		attachRightTo="parent right"
		
		verticalConstraint="regular"
		verticalSizing="const_size"
		verticalFlow="0"
		
		attachTopTo="parent top"
		attachBottomTo="parent bottom"
	>
		<containers.ListContainer
			name="optionsList"
			width="wrap_content"
			height="20"
			
			orientation="horizontal"
			
			horizontalConstraint="regular"
			horizontalSizing="const_offset"
			horizontalFlow="0"
			
			attachLeftTo="parent left 6"
			attachRightTo="parent right"
			
			verticalConstraint="regular"
			verticaSizing="const_size"
			verticalFlow="0.5"
			
			attachTopTo="parent top"
			attachBottomTo="parent bottom"
		>
			<common.Button
				theme="toolbar.Button"
				
				id="repo_button"
			
				width="wrap_content"
				height="match_parent"
				
				text="Repo"
			/>
			<common.Button
				theme="toolbar.Button"
			
				id="branch_button"
			
				width="wrap_content"
				height="match_parent"
				
				text="branch"
			/>
		</containers.ListContainer>
		<containers.ListContainer
			name="toolsList"
			
			width="wrap_content"
			height="20"
			
			orientation="horizontal"
			
			horizontalConstraint="regular"
			horizontalSizing="const_offset"
			horizontalFlow="1"
			
			attachLeftTo="parent left"
			attachRightTo="parent right 6"
			
			verticalConstraint="regular"
			verticaSizing="const_size"
			verticalFlow="0.5"
			
			attachTopTo="parent top"
			attachBottomTo="parent bottom"
		>
			<common.Button
				theme="toolbar.Button"
				
				width="wrap_content"
				height="match_parent"
				
				text="Menu"
			/>
		</containers.ListContainer>
	</containers.ConstraintsContainer>
	<shapes.Rectangle
		name="sidebar"
	
		width = "240"
		height = "given_size"
		fillColor = "#282a2e"
		
		horizontalConstraint="regular"
		horizontalSizing="const_size"
		
		attachLeftTo="parent left"
		
		verticalConstraint="regular"
		verticalSizing="const_offset"
		
		attachTopTo="toolbar bottom"
		attachBottomTo="parent bottom"
	/>
</containers.ConstraintsContainer>